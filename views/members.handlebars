<!-- main content  -->
<div class="container content">
    <!-- row 1 (Page Title)-->
    <div class="row">
        <div class="col-12">
            <h3 class="page-title">Store</h3>
        </div>
    </div>
    <!-- row 2 (Main content for page)-->
    <div id="cards" class="row align-items-center">
        <div class="col-lg-4 col-md-6 card-col">
            <div class="card" style="width: 18rem;">
                <img src="https://iili.io/f3qPte.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 id="item1" class="card-text-style card-title">{{item}}</h5>
                    <p class="card-text-style card-text">{{description}}</p>
                    <a class="card-text-style" id="price1">${{price}}</a>
                    <button id="addCart1" class=" btn-style btn">Add to cart</button>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 card-col">
            <div class="card" style="width: 18rem;">
                <img src="https://iili.io/f3q16v.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 id="item2" class="card-text-style card-title" {{item}}</h5>
                        <p class="card-text-style card-text">{{description}}</p>
                        <a class="card-text-style" id="price2">${{price}}</a>
                        <button id="addCart2" class=" btn-style btn">Add to cart</button>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 card-col">
            <div class="card" style="width: 18rem;">
                <img src="https://iili.io/f3frQa.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 id="item3" class="card-text-style card-title" {{item}}</h5>
                        <p class="card-text-style card-text">{{description}}</p>
                        <a class="card-text-style" id="price3">${{price}}</a>
                        <button id="addCart3" class=" btn-style btn">Add to cart</button>
                </div>
            </div>
        </div>

    </div>
</div>
